{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ESNext",
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]  
}
